{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
  },
  "exclude": [
    "src/spec/*",
    "dist/**/*",
    "coverage/**/*",
    "jest.config.js"
  ]
}