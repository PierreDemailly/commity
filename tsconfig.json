{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
  },
  "exclude": [
    "src/test/*",
    "dist/**/*",
    "coverage/**/*"
  ],
  "include": [
    "src/**/*.ts",
    "src/commity.json"
  ]
}
