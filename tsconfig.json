{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
  },
  "exclude": [
    "src/test/*",
    "dist/**/*",
    "coverage/**/*",
    "vite.config.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/commity.json"
  ]
}
